{
	"name": "ilias-review-improver",
	"version": "1.4.1",
	"description": "Simple Ilias Review Improver",
	"main": "main.ts",
	"author": "Dominic Wrege",
	"license": "MIT",
	"devDependencies": {
		"web-ext": "^7.8.0"
	},
	"scripts": {
		"start": "bun run build:bun && web-ext run -c config.js",
		"build": "bun run build:bun && web-ext lint -c config.js && web-ext build -c config.js -o",
		"lint": "web-ext lint -c config.js",
		"docs": "web-ext doc",
		"build:bun": "bun build ./src/main.ts --minify --outfile=./dist/main.bundle.js",
		"ext": "web-ext",
		"watch": "bun build ./src/main.ts --outdir ./dist --watch"
	},
	"packageManager": "bun",
	"webExt": {
		"artifactsDir": "build"
	}
}
