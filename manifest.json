{
	"manifest_version": 3,
	"name": "Ilias Review Improver",
	"id": 123,
	"version": "1.1.3",
	"description": "Improve ILIAS answer grading review process. Works only on the FH-Dortmund ILIAS E-Learning platform.",
	"icons": {
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://openbook.fh-dortmund.de/ilias*",
				"https://www.ilias.fh-dortmund.de/ilias/ilias*",
				"https://ilias.th-koeln.de/ilias/ilias*",
				"https://exam.fh-dortmund.de/ilias*"
			],
			"js": ["dist/main.bundle.js"]
		}
	],
	"options_ui": {
		"page": "src/settings.html",
		"open_in_tab": false
	},
	"permissions": ["storage"],
	"host_permissions": [
		"https://openbook.fh-dortmund.de/*",
		"https://www.ilias.fh-dortmund.de/*",
		"https://ilias.th-koeln.de/*",
		"https://exam.fh-dortmund.de/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "dominic.wrege@fh-dortmund.de"
		}
	},
	"content_security_policy": {
		"extension_pages": "default-src 'self'"
	}
}
