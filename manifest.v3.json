{
    "manifest_version": 3,
    "name": "Ilias Review Improver",
    "version": "1.0",
    "description": "Improve ILIAS answer grading review process. Works only the on the FH-Dortmund ILIAS E-Learning platform.",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://openbook.fh-dortmund.de/ilias*",
                "https://www.ilias.fh-dortmund.de/ilias/ilias*",
                "https://ilias.th-koeln.de/ilias/ilias*"
            ],
            "js": [
                "util.js",
                "lib/jszip.min.js",
                "export.js",
                "main.js",
                "settings.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://openbook.fh-dortmund.de/ilias*",
        "https://www.ilias.fh-dortmund.de/ilias/ilias*",
        "https://ilias.th-koeln.de/ilias/ilias*"
    ],
    "options_ui": {
        "page": "src/settings.html",
        "open_in_tab": false
    }
}